@model Shop.Models.AccuWeathers.SearchCityViewModel

<h1>Search City</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-class col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-class col-md-offset-3 col-md-5">
                <button asp-controller="AccuWeather" asp-action="SearchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>
