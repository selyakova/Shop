@model Shop.Models.AccuWeathers.AccuWeatherViewModel

<h1>City</h1>

<div class="container">
    <h2>Forecast for the selected city</h2>
    <h2>@Html.DisplayFor(model => model.City)</h2>
    <hr />

    <div class="form-group row">
        <label asp-for="Key" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Key)
    </div>

    <div class="form-group row">
        <label asp-for="TemperatureMin" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.TemperatureMin) °C
    </div>

    <div class="form-group row">
        <label asp-for="TemperatureMin" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.TemperatureMin) °C
    </div>

    <div class="form-group row">
        <label asp-for="Link" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Link)
    </div>
</div>
